{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "babel.config.js", "**/__mocks__/*"]
}
